<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.StremioMPVPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#E50914</item>
        <item name="colorPrimaryDark">#B20710</item>
        <item name="colorAccent">#E50914</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#BBBBBB</item>

        <item name="android:colorFocusedHighlight">#FFE50914</item>
        <item name="android:focusedByDefault" tools:targetApi="26">true</item>

        <item name="editTextStyle">@style/BlackOnWhiteEditText</item>
    </style>

    <style name="Theme.StremioMPVPlayer.Leanback" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimary">#E50914</item>
        <item name="colorAccent">#E50914</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorFocusedHighlight">#FFE50914</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="editTextStyle">@style/BlackOnWhiteEditText</item>
    </style>

    <style name="TVButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Theme.StremioMPVPlayer.Fullscreen" parent="Theme.StremioMPVPlayer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BlackOnWhiteEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>