<?xml version="1.0" encoding="utf-8"?>
<!-- Card elevation animator for hover/focus states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="@integer/animation_duration_medium"
                android:valueTo="12dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="@integer/animation_duration_medium"
                android:valueTo="1.02"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="@integer/animation_duration_medium"
                android:valueTo="1.02"
                android:valueType="floatType" />
        </set>
    </item>
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="@integer/animation_duration_short"
                android:valueTo="2dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="@integer/animation_duration_short"
                android:valueTo="0.98"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="@integer/animation_duration_short"
                android:valueTo="0.98"
                android:valueType="floatType" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="@integer/animation_duration_medium"
                android:valueTo="4dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="@integer/animation_duration_medium"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="@integer/animation_duration_medium"
                android:valueTo="1.0"
                android:valueType="floatType" />
        </set>
    </item>
</selector>
