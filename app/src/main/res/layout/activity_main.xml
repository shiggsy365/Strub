<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="false">

    <!-- Top Navigation Bar - Simplified -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="32dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/userProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

    <!-- Navigation Chips - Using Buttons instead -->
    <HorizontalScrollView
        android:id="@+id/navigationScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chipHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:padding="16dp"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/chipMovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movies"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:padding="16dp"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/chipSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Series"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:padding="16dp"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/chipMyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My List"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:padding="16dp"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/navigationScroll"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Continue Watching -->
            <LinearLayout
                android:id="@+id/continueWatchingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue Watching"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/continueWatchingRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- My List -->
            <LinearLayout
                android:id="@+id/myListSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My List"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myListRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Sections -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sectionsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="64dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/emptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Welcome! Add addons in settings to get started."
                android:textColor="#888888"
                android:textSize="24sp"
                android:gravity="center"
                android:padding="64dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>