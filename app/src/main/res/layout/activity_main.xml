<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background">

        <!-- Main Content Container -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Top Navigation Bar - No Logo, buttons aligned left -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigationContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Hidden App Logo for functionality but not visible -->
            <ImageButton
                android:id="@+id/appLogo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:contentDescription="@string/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Navigation Chip Group - Aligned to left -->
            <HorizontalScrollView
                android:id="@+id/navigationScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/mainNavGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacing="8dp">

                    <!-- Discover Chip with Dropdown Indicator - Small corners -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDiscover"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small"
                        app:chipIconVisible="true"
                        app:chipIcon="@drawable/ic_expand_more"
                        app:chipIconTint="@android:color/white"
                        app:chipIconSize="18dp" />

                    <!-- Library Chip with Dropdown Indicator - Small corners -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLibrary"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Library"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small"
                        app:chipIconVisible="true"
                        app:chipIcon="@drawable/ic_expand_more"
                        app:chipIconTint="@android:color/white"
                        app:chipIconSize="18dp" />

                    <!-- Search Chip - Small corners -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSearch"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small" />

                    <!-- More Options Chip - Small corners -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMore"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small"
                        app:chipIconVisible="true"
                        app:chipIcon="@drawable/ic_settings"
                        app:chipIconTint="@android:color/white"
                        app:chipIconSize="18dp" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>