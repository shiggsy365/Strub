<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigationContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <HorizontalScrollView
                android:id="@+id/navigationScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnAppLogo">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/mainNavGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDiscover"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small"
                        app:chipIconVisible="true"
                        app:chipIcon="@drawable/ic_expand_more"
                        app:chipIconTint="@android:color/white"
                        app:chipIconSize="18dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLibrary"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Library"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small"
                        app:chipIconVisible="true"
                        app:chipIcon="@drawable/ic_expand_more"
                        app:chipIconTint="@android:color/white"
                        app:chipIconSize="18dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSearch"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMore"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:focusable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="@color/chip_stroke_selector"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/corner_radius_small"
                        app:chipIconVisible="true"
                        app:chipIcon="@drawable/ic_settings"
                        app:chipIconTint="@android:color/white"
                        app:chipIconSize="18dp" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAppLogo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                android:background="@drawable/selector_focus_border"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="User Profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="8dp"
                app:contentPadding="4dp"
                app:cardPreventCornerOverlap="false">

            <com.google.android.material.card.MaterialCardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="8dp"
                app:contentPadding="0dp"
                app:cardPreventCornerOverlap="false">

                <ImageButton

                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/selector_focus_border"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    />
            </com.google.android.material.card.MaterialCardView>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>