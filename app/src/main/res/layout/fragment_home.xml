<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background">

        <ImageView
            android:id="@+id/pageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.70"
            android:contentDescription="Background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay_modern" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Container 1: Next Up -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nextUpContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/glass_surface_light"
                    app:cardCornerRadius="@dimen/corner_radius_small"
                    app:cardElevation="@dimen/elevation_medium"
                    app:strokeWidth="0dp"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Sidecar for Next Up -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/nextUpSidecar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:padding="@dimen/spacing_sm"
                            android:minHeight="150dp">

                            <FrameLayout
                                android:id="@+id/nextUpLogoContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:layout_marginBottom="@dimen/spacing_sm"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <ImageView
                                    android:id="@+id/nextUpLogo"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="Logo"
                                    android:scaleType="fitCenter"
                                    android:visibility="gone"
                                    tools:src="@drawable/movie" />

                                <TextView
                                    android:id="@+id/nextUpTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:textAppearance="?attr/textAppearanceTitleLarge"
                                    android:textColor="@color/text_primary"
                                    tools:text="Breaking Bad" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/nextUpEpisode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/text_secondary"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/nextUpLogoContainer"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="S01E01"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/nextUpRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:drawablePadding="@dimen/spacing_xs"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/warning_orange"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/nextUpEpisode"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="9.5"
                                tools:visibility="visible" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Horizontal RecyclerView for Next Up -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvNextUp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:paddingStart="@dimen/spacing_sm"
                            android:paddingEnd="@dimen/spacing_sm"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_poster" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Container 2: Continue Watching Episodes -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/continueEpisodesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/glass_surface_light"
                    app:cardCornerRadius="@dimen/corner_radius_small"
                    app:cardElevation="@dimen/elevation_medium"
                    app:strokeWidth="0dp"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Sidecar for Continue Episodes -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/continueEpisodesSidecar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:padding="@dimen/spacing_sm"
                            android:minHeight="150dp">

                            <FrameLayout
                                android:id="@+id/continueEpisodesLogoContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:layout_marginBottom="@dimen/spacing_sm"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <ImageView
                                    android:id="@+id/continueEpisodesLogo"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="Logo"
                                    android:scaleType="fitCenter"
                                    android:visibility="gone"
                                    tools:src="@drawable/movie" />

                                <TextView
                                    android:id="@+id/continueEpisodesTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:textAppearance="?attr/textAppearanceTitleLarge"
                                    android:textColor="@color/text_primary"
                                    tools:text="The Office" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/continueEpisodesEpisode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/text_secondary"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/continueEpisodesLogoContainer"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="S02E05"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/continueEpisodesRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:drawablePadding="@dimen/spacing_xs"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/warning_orange"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/continueEpisodesEpisode"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="8.7"
                                tools:visibility="visible" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Horizontal RecyclerView for Continue Episodes -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvContinueEpisodes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:paddingStart="@dimen/spacing_sm"
                            android:paddingEnd="@dimen/spacing_sm"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_poster" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Container 3: Continue Watching Movies -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/continueMoviesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:cardBackgroundColor="@color/glass_surface_light"
                    app:cardCornerRadius="@dimen/corner_radius_small"
                    app:cardElevation="@dimen/elevation_medium"
                    app:strokeWidth="0dp"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Sidecar for Continue Movies -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/continueMoviesSidecar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:padding="@dimen/spacing_sm"
                            android:minHeight="150dp">

                            <FrameLayout
                                android:id="@+id/continueMoviesLogoContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:layout_marginBottom="@dimen/spacing_sm"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <ImageView
                                    android:id="@+id/continueMoviesLogo"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="Logo"
                                    android:scaleType="fitCenter"
                                    android:visibility="gone"
                                    tools:src="@drawable/movie" />

                                <TextView
                                    android:id="@+id/continueMoviesTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:textAppearance="?attr/textAppearanceTitleLarge"
                                    android:textColor="@color/text_primary"
                                    tools:text="Inception" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/continueMoviesRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:drawablePadding="@dimen/spacing_xs"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@color/warning_orange"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@id/continueMoviesLogoContainer"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="8.8"
                                tools:visibility="visible" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Horizontal RecyclerView for Continue Movies -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvContinueMovies"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:paddingStart="@dimen/spacing_sm"
                            android:paddingEnd="@dimen/spacing_sm"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            tools:listitem="@layout/item_poster" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loadingCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/glass_surface"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_xlarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_xl">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/icon_size_xlarge"
                    android:layout_height="@dimen/icon_size_xlarge"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading home content..."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
