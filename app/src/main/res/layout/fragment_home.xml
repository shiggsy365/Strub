<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/pageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.70"
            android:contentDescription="Background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



        <!-- Main Content Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailsContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/posterCarousel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7">

            <!-- Left Half: Metadata and Description -->
            <LinearLayout
                android:id="@+id/leftContent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <!-- Logo and Rating/Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <!-- Logo Container -->
                    <FrameLayout
                        android:id="@+id/logoContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:minWidth="150dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/detailLogo"
                            android:layout_width="300dp"
                            android:layout_height="120dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="Content Logo"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            tools:src="@drawable/movie"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/detailTitle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:lineSpacingExtra="4dp"
                            android:maxLines="2"
                            android:textAppearance="?attr/textAppearanceHeadlineMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            tools:text="The Matrix" />
                    </FrameLayout>

                    <!-- Episode, Rating and Date Stacked to the RIGHT of Logo -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Episode Info (shown only for episodes) - MOVED ABOVE RATING -->
                        <TextView
                            android:id="@+id/detailEpisode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/text_secondary"
                            android:visibility="gone"
                            tools:text="S01E01"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/detailRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/warning_orange"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="â˜… 8.5"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/detailDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/text_secondary"
                            tools:text="2023" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Description with Fixed Height ScrollView -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="12dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/detailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/text_secondary"
                        tools:text="In a world where technology has advanced beyond imagination, humanity faces its greatest challenge yet. This epic tale of survival, love, and determination will keep you on the edge of your seat." />
                </ScrollView>

                <!-- Actor Chips - Horizontal Scroll -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/actorChips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipSpacing="4dp"
                        app:singleLine="true" />
                </HorizontalScrollView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:textSize="14sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:focusable="true"
                        android:nextFocusDown="@id/rvContent"
                        android:background="@drawable/selector_button_outlined_focus"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_play_circle"
                        app:iconSize="20dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTrailer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trailer"
                        android:textSize="14sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:focusable="true"
                        android:nextFocusDown="@id/rvContent"
                        android:background="@drawable/selector_button_outlined_focus"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_movie"
                        app:iconSize="20dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRelated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Related"
                        android:textSize="14sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:focusable="true"
                        android:nextFocusDown="@id/rvContent"
                        android:background="@drawable/selector_button_outlined_focus"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_search"
                        app:iconSize="20dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- List Name Label (Above Poster Carousel) -->
        <TextView
            android:id="@+id/currentListLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue Watching"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/text_primary"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/posterCarousel" />

        <!-- Horizontal Poster Carousel (Bottom 30%) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/posterCarousel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/detailsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:contentPadding="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:focusable="true"
                tools:listitem="@layout/item_poster" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Loading Indicator -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loadingCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/glass_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvLoadingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>