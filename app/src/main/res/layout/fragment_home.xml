<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="80dp">

        <!-- Section 1: Next Up -->
        <include
            android:id="@+id/sectionNextUp"
            layout="@layout/item_home_section" />

        <!-- Section 2: Continue Watching (Episodes) -->
        <include
            android:id="@+id/sectionContinueEpisodes"
            layout="@layout/item_home_section" />

        <!-- Section 3: Continue Watching (Movies) -->
        <include
            android:id="@+id/sectionContinueMovies"
            layout="@layout/item_home_section" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>