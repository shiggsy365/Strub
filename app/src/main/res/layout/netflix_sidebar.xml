<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/netflixSidebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_surfaceContainer"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:elevation="8dp">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/sidebarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            app:tint="@android:color/white"
            android:contentDescription="Home" />

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Discover -->
    <LinearLayout
        android:id="@+id/sidebarDiscover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconDiscover"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_discover"
            app:tint="@android:color/white"
            android:contentDescription="Discover" />

        <TextView
            android:id="@+id/textDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Library -->
    <LinearLayout
        android:id="@+id/sidebarLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconLibrary"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_library"
            app:tint="@android:color/white"
            android:contentDescription="Library" />

        <TextView
            android:id="@+id/textLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Live TV -->
    <LinearLayout
        android:id="@+id/sidebarLiveTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconLiveTV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tv"
            app:tint="@android:color/white"
            android:contentDescription="Live TV" />

        <TextView
            android:id="@+id/textLiveTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live TV"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Settings -->
    <LinearLayout
        android:id="@+id/sidebarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            app:tint="@android:color/white"
            android:contentDescription="Settings" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
