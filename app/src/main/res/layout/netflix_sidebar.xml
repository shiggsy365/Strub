<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/netflixSidebar"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_surfaceContainer"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:elevation="8dp"
    android:gravity="center_horizontal">

    <!-- 1. App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:contentDescription="App Logo"
        android:layout_marginBottom="24dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp" />

    <!-- 2. Home -->
    <ImageButton
        android:id="@+id/sidebarHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_home"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Home"
        android:nextFocusDown="@id/sidebarMovies"
        android:layout_marginBottom="8dp" />

    <!-- 3. Movies (NEW - replaces Discover) -->
    <ImageButton
        android:id="@+id/sidebarMovies"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_movie"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Movies"
        android:nextFocusDown="@id/sidebarSeries"
        android:nextFocusUp="@id/sidebarHome"
        android:layout_marginBottom="8dp" />

    <!-- 4. Series (NEW - replaces Library) -->
    <ImageButton
        android:id="@+id/sidebarSeries"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_tv"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Series"
        android:nextFocusDown="@id/sidebarSearch"
        android:nextFocusUp="@id/sidebarMovies"
        android:layout_marginBottom="8dp" />

    <!-- 5. Search -->
    <ImageButton
        android:id="@+id/sidebarSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_search"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Search"
        android:nextFocusDown="@id/sidebarLiveTV"
        android:nextFocusUp="@id/sidebarSeries"
        android:layout_marginBottom="8dp" />

    <!-- 6. Live TV - visibility controlled dynamically in MainActivity based on configuration -->
    <ImageButton
        android:id="@+id/sidebarLiveTV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_tv"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Live TV"
        android:nextFocusDown="@id/sidebarSettings"
        android:nextFocusUp="@id/sidebarSearch"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Spacer to push bottom items down -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 7. Settings -->
    <ImageButton
        android:id="@+id/sidebarSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:nextFocusUp="@id/sidebarLiveTV"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Settings" />

</LinearLayout>