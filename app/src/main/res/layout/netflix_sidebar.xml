<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/netflixSidebar"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_surfaceContainer"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:elevation="8dp"
    android:gravity="center_horizontal">

    <!-- 1. App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:contentDescription="App Logo"
        android:layout_marginBottom="24dp" />

    <!-- 2. Home -->
    <ImageButton
        android:id="@+id/sidebarHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_home"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Home"
        android:nextFocusDown="@id/sidebarDiscover"
        android:layout_marginBottom="8dp" />

    <!-- 3. Discover -->
    <ImageButton
        android:id="@+id/sidebarDiscover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_discover"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Discover"
        android:nextFocusDown="@id/sidebarLibrary"
        android:layout_marginBottom="8dp" />

    <!-- 4. Library -->
    <ImageButton
        android:id="@+id/sidebarLibrary"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_library"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Library"
        android:nextFocusDown="@id/sidebarLiveTV"
        android:layout_marginBottom="24dp" />

    <!-- 5. Live TV (Moved up) -->
    <ImageButton
        android:id="@+id/sidebarLiveTV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_tv"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Live TV"
        android:nextFocusDown="@id/mediaTypeToggle"
        android:layout_marginBottom="8dp" />

    <!-- 7. Search -->
    <ImageButton
        android:id="@+id/sidebarSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_search"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Search"
        android:nextFocusDown="@id/sidebarSettings"
        android:layout_marginBottom="8dp" />

    <!-- Spacer to push bottom items down -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 6. Movies/Series Toggle (Moved down) -->
    <LinearLayout
        android:id="@+id/mediaTypeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/selector_focus_border"
        android:padding="4dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iconMediaType"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_movie"
            app:tint="@color/md_theme_primary" />

        <TextView
            android:id="@+id/textMediaType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOV"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"/>
    </LinearLayout>



    <!-- 8. Settings -->
    <ImageButton
        android:id="@+id/sidebarSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings"
        android:scaleType="centerInside"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:contentDescription="Settings" />

</LinearLayout>