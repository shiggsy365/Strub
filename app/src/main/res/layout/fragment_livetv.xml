<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/pageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.3" />

    <!-- Scrim Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:alpha="0.6" />

    <!-- Group Filter Chips (Horizontal ScrollView) -->
    <HorizontalScrollView
        android:id="@+id/groupChipsScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/groupChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false"
            app:chipSpacingHorizontal="8dp">
        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/groupChipsScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TV Guide List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTVGuide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            tools:listitem="@layout/item_tv_channel" />

        <!-- Details Pane -->
        <androidx.cardview.widget.CardView
            android:id="@+id/detailsCard"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:cardBackgroundColor="@color/md_theme_surfaceContainer"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_high">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Channel Logo -->
                    <ImageView
                        android:id="@+id/detailChannelLogo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:scaleType="fitCenter"
                        tools:src="@android:drawable/ic_menu_gallery" />

                    <!-- Channel Name -->
                    <TextView
                        android:id="@+id/detailChannelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.App.HeadlineSmall"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        tools:text="Channel Name" />

                    <!-- Current Program Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Now Playing"
                        android:textAppearance="@style/TextAppearance.App.TitleSmall"
                        android:textColor="@color/md_theme_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailCurrentTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.App.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp"
                        tools:text="Program Title" />

                    <TextView
                        android:id="@+id/detailCurrentTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.App.BodySmall"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp"
                        tools:text="20:00 - 21:00" />

                    <TextView
                        android:id="@+id/detailCurrentDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"
                        android:maxLines="4"
                        android:ellipsize="end"
                        tools:text="Program description goes here..." />

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/detailProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginBottom="24dp"
                        tools:progress="65" />

                    <!-- Play Button -->
                    <Button
                        android:id="@+id/btnPlay"
                        style="@style/Widget.App.Button.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Play Channel"
                        android:layout_marginBottom="16dp"
                        android:focusable="true" />

                    <!-- Upcoming Programs -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Up Next"
                        android:textAppearance="@style/TextAppearance.App.TitleSmall"
                        android:textColor="@color/md_theme_primary"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUpcoming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_upcoming_program" />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Loading Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loadingCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/md_theme_surfaceContainer"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardElevation="@dimen/elevation_high"
        app:contentPadding="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLoadingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Live TV..."
                android:textAppearance="@style/TextAppearance.App.BodyLarge"
                android:textColor="@color/text_primary" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
