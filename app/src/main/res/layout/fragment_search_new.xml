<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <!-- 1. Hero Background Image (Full width, top half) -->
    <ImageView
        android:id="@+id/pageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/movie" />

    <!-- 2. Gradient Overlays for Readability -->
    <!-- Left-to-right gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_left_to_right" />

    <!-- Bottom-up gradient to blend rows -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 3. Hero Details (Fixed Position) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/heroDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rvSearchRows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo (Top Left, 30% Width, 20% Height of screen) -->
        <!-- Using constraintDimensionRatio to maintain aspect or just constraints -->
        <!-- You asked for 30% width and 20% height of SCREEN.
             Here we constraint to parent width/height with percentages.
        -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textOrLogo"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintWidth_percent="0.4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/detailLogo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:src="@drawable/movie"
                tools:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="The Mandalorian"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Metadata Row (Rating, Episode) - Below Logo -->
        <LinearLayout
            android:id="@+id/metaRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@id/textOrLogo"
            app:layout_constraintTop_toTopOf="@id/textOrLogo">

            <TextView
                android:id="@+id/detailRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="â˜… 8.5"
                android:textColor="@color/warning_orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/detailEpisode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="S01E01"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="2023"
                android:textSize="16sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Cast Chips - Below Metadata, Max 60% Width -->
        <HorizontalScrollView
            android:id="@+id/castScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/textOrLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="1">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/actorChips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:chipSpacingHorizontal="8dp">
                <!-- Chips added dynamically -->
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Description - Below Cast, Max 60% Width -->
        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/castScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="1"
            tools:text="After the fall of the Empire, a lone gunfighter makes his way through the outer reaches of the lawless galaxy." />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 4. Vertical Stack of Rows (The Browse Area) -->
    <!-- Added fadingEdge to prevent hard cuts on text when scrolling up -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchRows"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="48dp"
        android:clipToPadding="false"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>