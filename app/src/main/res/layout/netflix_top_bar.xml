<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/netflixTopBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp"
    android:paddingHorizontal="8dp"
    android:background="#00000000"
    android:elevation="16dp">

    <!-- Movie/Series Dropdown -->
    <TextView
        android:id="@+id/dropdownMediaType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/text_primary"
        android:padding="6dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:drawableTint="@color/text_secondary"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />

    <!-- Current List Label (non-interactive) -->
    <TextView
        android:id="@+id/currentListLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/text_primary"
        android:padding="6dp"
        android:gravity="start|center_vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/dropdownMediaType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Spacer to push search to the right -->
    <Space
        android:id="@+id/spacer"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/currentListLabel"
        app:layout_constraintEnd_toStartOf="@id/searchInputLayout"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Search Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/btnUserProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/text_secondary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchField"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="Search"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- User Profile Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnUserProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:contentPadding="0dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_focus_border"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:contentDescription="User Profile" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
