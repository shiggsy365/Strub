<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/modern_background">

        <!-- Dynamic background with subtle animation -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.05"
            android:src="@drawable/modern_background"
            android:contentDescription="Background" />

        <!-- Main content container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_lg">

            <!-- Search section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="800dp"
                app:cardBackgroundColor="@color/glass_surface"
                app:cardCornerRadius="@dimen/corner_radius_xlarge"
                app:cardElevation="@dimen/elevation_large"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xl">

                    <!-- Search input row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <!-- Search input field -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/searchInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_md"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="@dimen/corner_radius_large"
                            app:boxCornerRadiusTopEnd="@dimen/corner_radius_large"
                            app:boxCornerRadiusBottomStart="@dimen/corner_radius_large"
                            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_large"
                            app:boxBackgroundColor="@color/md_theme_surface"
                            app:boxStrokeColor="@color/md_theme_primary"
                            app:hintTextColor="@color/text_tertiary"
                            app:startIconDrawable="@drawable/ic_search"
                            app:startIconTint="@color/text_tertiary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/searchEditText"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/text_field_height"
                                android:hint="Search for movies, shows, or people..."
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_tertiary"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:importantForAutofill="no"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:nextFocusDown="@id/chipGroupSearchType"
                                android:nextFocusRight="@id/searchButton" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Search button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/searchButton"
                            style="@style/Widget.App.Button"
                            android:layout_width="@dimen/button_height"
                            android:layout_height="@dimen/button_height"
                            app:icon="@drawable/ic_search"
                            app:iconPadding="0dp"
                            app:iconTint="@color/md_theme_onPrimary"
                            android:contentDescription="Search"
                            android:focusable="true"
                            android:nextFocusLeft="@id/searchEditText"
                            android:nextFocusDown="@id/chipGroupSearchType" />

                    </LinearLayout>

                    <!-- Filter chips -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filter by:"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupSearchType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            app:chipSpacingHorizontal="@dimen/spacing_sm">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipMixed"
                                style="@style/Widget.App.Chip"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/chip_height"
                                android:text="All"
                                android:checked="true"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:chipStrokeColor="@color/chip_stroke_selector"
                                app:chipStrokeWidth="@dimen/stroke_medium" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipMovies"
                                style="@style/Widget.App.Chip"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/chip_height"
                                android:text="Movies"
                                app:chipIcon="@drawable/ic_movie"
                                app:chipIconTint="@color/chip_text_selector"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:chipStrokeColor="@color/chip_stroke_selector"
                                app:chipStrokeWidth="@dimen/stroke_medium" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSeries"
                                style="@style/Widget.App.Chip"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/chip_height"
                                android:text="Series"
                                app:chipIcon="@drawable/ic_tv"
                                app:chipIconTint="@color/chip_text_selector"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:chipStrokeColor="@color/chip_stroke_selector"
                                app:chipStrokeWidth="@dimen/stroke_medium" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipPeople"
                                style="@style/Widget.App.Chip"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/chip_height"
                                android:text="People"
                                app:chipIcon="@drawable/ic_person"
                                app:chipIconTint="@color/chip_text_selector"
                                app:chipBackgroundColor="@color/chip_background_selector"
                                app:chipStrokeColor="@color/chip_stroke_selector"
                                app:chipStrokeWidth="@dimen/stroke_medium" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Results section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultsCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/searchCard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/glass_surface_light"
                app:cardCornerRadius="@dimen/corner_radius_xlarge"
                app:cardElevation="@dimen/elevation_medium"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outline">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_lg">

                    <!-- Results header -->
                    <LinearLayout
                        android:id="@+id/resultsHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_md"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/resultsTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Search Results"
                            android:textAppearance="?attr/textAppearanceTitleLarge"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/resultsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/text_secondary"
                            android:visibility="gone"
                            tools:text="42 results"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <!-- Results grid -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/resultsRecycler"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        android:focusable="true"
                        android:nextFocusUp="@id/chipGroupSearchType"
                        app:layout_constraintTop_toBottomOf="@id/resultsHeader"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:listitem="@layout/item_poster_modern" />

                    <!-- Empty state -->
                    <LinearLayout
                        android:id="@+id/emptyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="@dimen/icon_size_xlarge"
                            android:layout_height="@dimen/icon_size_xlarge"
                            android:src="@drawable/ic_search"
                            android:layout_marginBottom="@dimen/spacing_md"
                            app:tint="@color/text_tertiary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start typing to search"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="@dimen/spacing_sm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find movies, TV shows, and people"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/text_tertiary" />

                    </LinearLayout>

                    <!-- No results state -->
                    <LinearLayout
                        android:id="@+id/noResultsState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="@dimen/icon_size_xlarge"
                            android:layout_height="@dimen/icon_size_xlarge"
                            android:src="@drawable/ic_search_off"
                            android:layout_marginBottom="@dimen/spacing_md"
                            app:tint="@color/text_tertiary" />

                        <TextView
                            android:id="@+id/noResultsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No results found"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="@dimen/spacing_sm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Try different keywords or check spelling"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/text_tertiary" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Loading overlay -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loadingCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/glass_surface"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_xlarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/spacing_xl">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:layout_marginEnd="@dimen/spacing_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Searching..."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
