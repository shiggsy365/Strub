<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/md_theme_surface"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Library Filters &amp; Sorting"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal" />

    <!-- Sort By Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort By:"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/radioGroupSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Added Date Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <RadioButton
                android:id="@+id/radioAddedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Added Date"
                android:textColor="@color/text_primary"
                android:focusable="true" />

            <TextView
                android:id="@+id/indicatorAddedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:textSize="16sp"
                android:textColor="@color/md_theme_primary"
                android:visibility="invisible"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Rating Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <RadioButton
                android:id="@+id/radioRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating"
                android:textColor="@color/text_primary"
                android:focusable="true" />

            <TextView
                android:id="@+id/indicatorRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="16sp"
                android:textColor="@color/md_theme_primary"
                android:visibility="invisible"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Release Date Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <RadioButton
                android:id="@+id/radioReleaseDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Release Date"
                android:textColor="@color/text_primary"
                android:focusable="true" />

            <TextView
                android:id="@+id/indicatorReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="16sp"
                android:textColor="@color/md_theme_primary"
                android:visibility="invisible"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Title Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <RadioButton
                android:id="@+id/radioTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textColor="@color/text_primary"
                android:focusable="true" />

            <TextView
                android:id="@+id/indicatorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="16sp"
                android:textColor="@color/md_theme_primary"
                android:visibility="invisible"
                android:paddingEnd="8dp" />
        </LinearLayout>

    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_theme_outline"
        android:layout_marginVertical="8dp" />

    <!-- Filter Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter:"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <!-- Movie Genre Spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Genre: "
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <Spinner
            android:id="@+id/spinnerMovieGenre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@drawable/edit_text_background"
            android:padding="8dp" />
    </LinearLayout>

    <!-- TV Genre Spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV Genre: "
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <Spinner
            android:id="@+id/spinnerTVGenre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@drawable/edit_text_background"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Clear Filters Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClearFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All Sorts and Filters"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_theme_outline"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:focusable="true"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:focusable="true"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

</LinearLayout>
