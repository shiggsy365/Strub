<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/movie" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:id="@+id/scrollDetailPane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rvNavigation"
            app:layout_constraintWidth_percent="0.8"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <ImageView
                    android:id="@+id/imgPoster"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/selector_focus_border"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/movie" />

                <LinearLayout
                    android:id="@+id/infoContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toEndOf="@id/imgPoster"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:text="Movie Title" />

                    <TextView
                        android:id="@+id/tvMeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BBBBBB"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        tools:text="2023 • Action, Adventure • 2h 15m" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#DDDDDD"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp"
                        tools:text="Movie description goes here..." />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp">

                        <Button
                            android:id="@+id/btnPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play"
                            android:backgroundTint="@color/color_primary"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="32dp"
                            android:focusable="true" />

                        <Button
                            android:id="@+id/btnTrailer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trailer"
                            android:backgroundTint="#555555"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="16dp"
                            android:focusable="true" />

                        <Button
                            android:id="@+id/btnLibrary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Library"
                            android:backgroundTint="#555555"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="16dp"
                            android:focusable="true" />

                        <Button
                            android:id="@+id/btnWatchlist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add To Watchlist"
                            android:backgroundTint="#555555"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="16dp"
                            android:focusable="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/castContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/imgPoster"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNavigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#11FFFFFF" android:paddingTop="32dp"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layout_constraintStart_toEndOf="@+id/scrollDetailPane"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.2"
            tools:listitem="@layout/item_stream" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>