<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="2dp"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="@dimen/corner_radius_small"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/md_theme_surfaceContainer"
    app:strokeWidth="1dp"
    app:strokeColor="@color/md_theme_outline"
    android:background="@drawable/modern_focus_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/catalogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.LabelMedium"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="2dp" />

        <!-- Selection Indicator -->
        <View
            android:id="@+id/selectionIndicator"
            android:layout_width="24dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/modern_rating_badge"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>