<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:text="Next Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Horizontal Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@id/tvSectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Horizontal Poster List (Left Side) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSectionContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_poster" />

        <!-- Sidecar (Right Side) -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#1AFFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_horizontal">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/imgSidecarLogo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    tools:src="@drawable/ic_tv"
                    tools:visibility="visible" />

                <!-- Fallback Title if no logo -->
                <TextView
                    android:id="@+id/tvSidecarTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    tools:text="Show Title" />

                <TextView
                    android:id="@+id/tvSidecarRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#FFC107"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="â˜… 8.5" />

                <TextView
                    android:id="@+id/tvSidecarEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    tools:text="S01 E05" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33FFFFFF" />

                <TextView
                    android:id="@+id/tvSidecarDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#DDDDDD"
                    android:textSize="11sp"
                    android:maxLines="8"
                    android:ellipsize="end"
                    tools:text="Episode description goes here. It gives context to the user about what they are about to watch." />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>