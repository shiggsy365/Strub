<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardChannel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/md_theme_surface"
    app:cardCornerRadius="@dimen/corner_radius_small"
    app:cardElevation="@dimen/elevation_small"
    app:strokeWidth="3dp"
    app:strokeColor="@color/tv_channel_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/channelLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Channel logo"
            tools:src="@drawable/ic_tv" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/channelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodyLarge"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                tools:text="ESPN HD" />

            <TextView
                android:id="@+id/currentProgramTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodyMedium"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                tools:text="Live Sports Event" />

            <TextView
                android:id="@+id/currentProgramTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodySmall"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"
                tools:text="20:00 - 22:00" />

            <ProgressBar
                android:id="@+id/programProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                tools:progress="65" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
