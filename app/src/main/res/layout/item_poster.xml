<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:focusable="true"
        android:clickable="true"
        style="@style/Widget.App.Poster"
        app:cardCornerRadius="@dimen/corner_radius_small"
        app:cardElevation="@dimen/elevation_medium"
        app:cardBackgroundColor="@color/card_elevated"
        app:strokeWidth="@dimen/stroke_thick"
        app:strokeColor="@color/poster_stroke_selector"
        app:contentPadding="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <!-- Main poster image - maintains 2:3 aspect ratio -->
            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="@color/md_theme_surfaceDim"
                android:contentDescription="Content Poster"
                android:adjustViewBounds="true"
                android:padding="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,2:3"
                tools:src="@drawable/movie" />

            <!-- Watch status indicators -->
            <LinearLayout
                android:id="@+id/statusContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/spacing_xs"
                android:background="@drawable/status_badge_background"
                android:padding="@dimen/spacing_xs"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/poster"
                app:layout_constraintEnd_toEndOf="@id/poster">

                <!-- Watched indicator -->
                <ImageView
                    android:id="@+id/iconWatched"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="@color/success_green"
                    android:contentDescription="Watched" />

                <!-- In progress indicator -->
                <ImageView
                    android:id="@+id/iconInProgress"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_play_circle"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:visibility="gone"
                    app:tint="@color/md_theme_primary"
                    android:contentDescription="In Progress" />

            </LinearLayout>

            <!-- Progress indicator bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginHorizontal="@dimen/spacing_xs"
                android:visibility="gone"
                android:progressTint="@color/md_theme_primary"
                android:progressBackgroundTint="@color/md_theme_outline"
                app:layout_constraintBottom_toBottomOf="@id/poster"
                app:layout_constraintStart_toStartOf="@id/poster"
                app:layout_constraintEnd_toEndOf="@id/poster"
                tools:progress="60"
                tools:visibility="visible" />

            <!-- Focus indicator overlay -->
            <View
                android:id="@+id/focusIndicator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/focus_indicator_modern"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>