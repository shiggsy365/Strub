<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="330dp"
    android:layout_margin="12dp"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1E1E1E"
    android:foreground="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#2A2A2A"
            android:contentDescription="Poster" />

        <!-- Focus overlay -->
        <View
            android:id="@+id/focusOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            android:visibility="gone" />

        <!-- Progress bar for continue watching -->
        <ProgressBar
            android:id="@+id/watchProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:progressTint="#E50914"
            android:max="100" />

        <!-- Library indicator -->
        <ImageView
            android:id="@+id/libraryIndicator"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="gone"
            android:contentDescription="In Library"
            app:tint="@android:color/white" />

        <!-- Title overlay for focused state -->
        <LinearLayout
            android:id="@+id/titleOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@drawable/gradient_overlay"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
