<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRoot"
        android:layout_width="@dimen/poster_width"
        android:layout_height="@dimen/poster_height_standard"
        android:layout_margin="6dp"
        android:focusable="true"
        android:clickable="true"
        style="@style/Widget.App.Poster"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="3dp"
        app:strokeColor="@color/poster_stroke_selector"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/poster_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--
                 Poster with 2:3 aspect ratio, fills the card
            -->
            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Poster"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/movie" />

            <!-- Watched Icon (Green Checkmark) -->
            <ImageView
                android:id="@+id/iconWatched"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                android:padding="4dp"
                android:background="@drawable/modern_icon_background"
                app:tint="@color/success_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                android:elevation="6dp"
                android:contentDescription="Watched"
                tools:visibility="visible" />

            <!-- In Progress Icon (Orange Circle) -->
            <ImageView
                android:id="@+id/iconInProgress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play_circle"
                android:visibility="gone"
                android:padding="4dp"
                android:background="@drawable/modern_icon_background"
                app:tint="@color/warning_orange"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                android:elevation="6dp"
                android:contentDescription="In Progress"
                tools:visibility="gone" />

            <!-- Rating badge (top-left) -->
            <TextView
                android:id="@+id/ratingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/modern_icon_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"
                android:elevation="6dp"
                tools:text="â˜… 8.5"
                tools:visibility="visible" />

            <!-- Genre Name Text (for genre items) -->
            <TextView
                android:id="@+id/genreText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="12dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#99000000"
                app:layout_constraintBottom_toBottomOf="@id/poster"
                app:layout_constraintStart_toStartOf="@id/poster"
                app:layout_constraintEnd_toEndOf="@id/poster"
                android:elevation="4dp"
                tools:text="Action"
                tools:visibility="visible" />

            <!-- Hover Overlay -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/poster"
                app:layout_constraintBottom_toBottomOf="@id/poster"
                app:layout_constraintStart_toStartOf="@id/poster"
                app:layout_constraintEnd_toEndOf="@id/poster" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>