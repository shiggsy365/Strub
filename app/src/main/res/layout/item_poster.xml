<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:focusable="true"
        android:clickable="true"
        style="@style/Widget.App.Poster"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="3dp"
        app:strokeColor="@color/poster_stroke_selector"
        app:contentPadding="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/poster_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Main Poster ImageView -->
            <ImageView
                android:id="@+id/poster"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:contentDescription="Poster"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="W,2:3"
                tools:src="@drawable/movie" />

            <!-- Watched Icon (Green Checkmark) -->
            <ImageView
                android:id="@+id/iconWatched"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                android:padding="4dp"
                android:background="@drawable/modern_icon_background"
                app:tint="@color/success_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                android:contentDescription="Watched"
                tools:visibility="visible" />

            <!-- In Progress Icon (Orange Circle) -->
            <ImageView
                android:id="@+id/iconInProgress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play_circle"
                android:visibility="gone"
                android:padding="4dp"
                android:background="@drawable/modern_icon_background"
                app:tint="@color/warning_orange"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                android:contentDescription="In Progress"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>