<?xml version="1.0" encoding="utf-8"?>
<!-- Advanced focus indicator with glow effect -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State with glow -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <corners android:radius="16dp" />
                    <stroke android:width="4dp" android:color="#33E50914" />
                </shape>
            </item>
            
            <!-- Middle glow -->
            <item android:insetTop="2dp" android:insetBottom="2dp" 
                  android:insetLeft="2dp" android:insetRight="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <corners android:radius="14dp" />
                    <stroke android:width="2dp" android:color="#66E50914" />
                </shape>
            </item>
            
            <!-- Inner border -->
            <item android:insetTop="4dp" android:insetBottom="4dp" 
                  android:insetLeft="4dp" android:insetRight="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="@color/md_theme_primary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="16dp" />
            <stroke android:width="3dp" android:color="@color/focus_secondary" />
        </shape>
    </item>
    
    <!-- Default transparent -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
