<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused/Pressed State -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Shadow Layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <!-- Main Card -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_theme_surfaceContainerHigh" />
                    <stroke android:width="2dp" android:color="@color/md_theme_primary" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Elevated State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow Layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#60000000" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <!-- Main Card -->
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_theme_surfaceContainer" />
                    <stroke android:width="1dp" android:color="@color/md_theme_outline" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surfaceContainer" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
