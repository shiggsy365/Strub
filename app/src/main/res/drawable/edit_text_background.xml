<?xml version="1.0" encoding="utf-8"?>
<!-- Modern EditText with focus animation -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_theme_surfaceVariant" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Focused border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="@color/md_theme_primary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Enabled State -->
    <item android:state_enabled="true">
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_theme_surface" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Subtle border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="@color/md_theme_outline" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Disabled State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surfaceDim" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/text_disabled" />
        </shape>
    </item>
</selector>
