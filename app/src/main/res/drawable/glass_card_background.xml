<?xml version="1.0" encoding="utf-8"?>
<!-- Glass morphism card with subtle transparency -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_surface" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Subtle highlight on top edge -->
    <item android:gravity="top" android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp" />
        </shape>
    </item>
    
    <!-- Subtle shadow on bottom edge -->
    <item android:gravity="bottom" android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" />
        </shape>
    </item>
</layer-list>
