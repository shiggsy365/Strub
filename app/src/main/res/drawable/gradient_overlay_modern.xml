<?xml version="1.0" encoding="utf-8"?>
<!-- Modern gradient overlay with sophisticated depth -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient - deep navy to charcoal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#800A0E1A"
                android:centerColor="#B0141B2D"
                android:endColor="#E00F1420"
                android:type="linear" />
        </shape>
    </item>

    <!-- Radial overlay for central depth and focus -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="0.5"
                android:centerY="0.3"
                android:startColor="#00000000"
                android:centerColor="#1A1A2332"
                android:endColor="#66050812"
                android:type="radial"
                android:gradientRadius="900dp" />
        </shape>
    </item>

    <!-- Subtle cyan accent glow at top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#1000D9FF"
                android:centerColor="#0500D9FF"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
