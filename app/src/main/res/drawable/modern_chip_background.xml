<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected and Focused State -->
    <item android:state_selected="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_primary" />
            <stroke android:width="2dp" android:color="@color/md_theme_onPrimary" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_primary" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Checked and Focused State -->
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_primary" />
            <stroke android:width="2dp" android:color="@color/md_theme_onPrimary" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Checked State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_primary" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surfaceContainerHigh" />
            <stroke android:width="2dp" android:color="@color/md_theme_primary" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surfaceContainer" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_surfaceContainerLow" />
            <stroke android:width="1dp" android:color="@color/md_theme_outline" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
