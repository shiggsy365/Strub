<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Checked States -->
    <item android:state_selected="true" android:color="@color/md_theme_onPrimary" />
    <item android:state_checked="true" android:color="@color/md_theme_onPrimary" />
    
    <!-- Focused State -->
    <item android:state_focused="true" android:color="@color/text_primary" />
    
    <!-- Pressed State -->
    <item android:state_pressed="true" android:color="@color/text_primary" />
    
    <!-- Enabled State -->
    <item android:state_enabled="true" android:color="@color/text_primary" />
    
    <!-- Disabled State -->
    <item android:state_enabled="false" android:color="@color/text_disabled" />
    
    <!-- Default State -->
    <item android:color="@color/text_secondary" />
</selector>
